# Chave da OpenAI (sem prefixo Bearer)
OPENAI_API_KEY=sk-xxx

# Host/porta da API
PORT=3000
HOST=0.0.0.0

# Chroma remoto (opcional). Se vazio, usa Chroma local persistente em ./chroma
# CHROMA_HOST=http://sua-vps:8000

# Modelo LLM (LiteLLM / ADK)
# OPENAI_BASE_URL=  # se usar proxy/Azure
# OPENAI_API_VERSION= # se Azure

# Ajustes do RAG
# ADK_CHUNK_SIZE=800
# ADK_CHUNK_OVERLAP=200
# ADK_TOP_K=5

# Caminhos (mantêm padrão se não definir)
# ADK_CHROMA_PATH=chroma
# ADK_COLLECTION_NAME=local_docs
